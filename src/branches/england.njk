<h1 class="has-text-centered">
    <i class="fas mr-2 fa-code-branch"></i>{{ title }}</h1>


<div class="tabs">
    <ul>
        <li {% if title == "Branches" %} class="is-active"{% endif %}>
            <a href="/branches">All Branches</a>
        </li>
        {% for country in countries %}
            <li {% if title == country.name %} class="is-active"{% endif %}>
                <a href="/branches/{{ country.name | slug }}">{{ country.name }}</a>
            </li>
        {% endfor %}
    </ul>
</div>

<div class="columns is-multiline">
    {% for branch in branches.england %}
        <div class="column is-full-tablet is-full-desktop is-half-widescreen is-half-fullhd">
            <div class="card border-radius-2 p-5 is-flex is-align-items-center">

                <figure id="logo" class="image is-96x96">
                    {% include 'svgOne.njk' %}
                </figure>
                <div class="card-content">
                    <p class="title is-size-5">{{ branch.fields["Title"] }}</p>
                    <p class="subtitle is-size-6">{{ branch.fields["Name (from University)"][0] }},
                        {{ branch.fields["Country"][0] }}</p>
                    <p>                                <a class="color-black has-text-link" href="mailto:{{ branch.fields["Email"] }}">
                            {{ branch.fields["Email"] }}
                        </a></p>
                    <div>
                    {% if branch.fields["Instagram"] %}
                        <a class="color-black has-text-link" href="{{ branch.fields["Instagram"] }}">
                            <i class="fab mr-2 fa-instagram"></i>
                        </a>
                    {% endif %}
                    {% if branch.fields["Twitter"] %}
                        <a class="color-black has-text-link" href="{{ branch.fields["Twitter"] }}">
                            <i class="fab mr-2 fa-twitter"></i>
                        </a>
                        {% endif %}
                    {% if branch.fields["Facebook"] %}
                        <a class="color-black has-text-link" href="{{ branch.fields["Facebook"] }}">
                            <i class="fab mr-2 fa-facebook"></i>
                        </a>
                        {% endif %}
                    </div>
                </div>
                    </div>
                </div>
    {% endfor %}
</div>