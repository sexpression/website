---
layout: headerfooter.njk
---

<section class="hero is-medium container py-5">
    <div class="hero-body colour-background box">
        <div class="content has-text-centered">
            <h1 class="title is-size-2 has-text-white">
                {{ home.hero_title }}
            </h1>
            <p class="subtitle column is-three-fifths is-offset-one-fifth has-text-white">
                {{ home.hero_description }}
            </p>
            <div>
                <a href="/form/request-a-session" class="action-button primary hvr-grow button is-light">Request a session<i class="fas ml-2 fa-chalkboard-teacher"></i>
                </a>
                <a href="/form/join-a-branch" class="action-button secondary hvr-grow button is-light">Join a branch<i class="fas ml-2 fa-hands-helping"></i>
                </a>
            </div>
        </div>
    </div>
</section>

<section class="section container has-text-centered">
    <h2 class="subtitle">
        <b>
            Our Partners, Sponsors, Friends and Donors
        </b>
    </h2>
    <div class="columns is-multiline is-mobile is-vcentered">
        {% for partner in partners %}
            <div class="column is-one-quarter-mobile">
                <a href="{{ partner.website }}" target="_blank">
                    <img src="https://sexpression.directus.app/assets/{{ partner.logo }}" alt="{{ partner.name }}">
                </a>
            </div>
            {% endfor%}
        </div>
    </section>

    <section class="section">
        <div class="container has-text-centered py-4">
            <h2 class="title">{{ home.about_us_title }}</h2>
            <p class="subtitle mb-6">{{ home.about_us_description }}</p>
        </div>
    </section>

    <section class="section">
        <div class="container py-4">
            <h2 class="title has-text-centered mb-6">{{ home.our_vision_and_values_title }}</h2>
            <div class="columns">
                <div class="column is-3 is-flex is-flex-direction-column" style="gap: 2rem;">
                    <i class="fas fa-{{ home.our_vision_and_values_item_1_icon }} is-size-1 primary"></i>
                    <div>
                        <h4 class="title is-4 gradient primary">{{ home.our_vision_and_values_item_1_title }}</h4>
                        <p class="subtitle is-6">{{ home.our_vision_and_values_item_1_description }}</p>
                    </div>
                </div>
                <div class="column is-3 is-flex is-flex-direction-column" style="gap: 2rem;">
                    <i class="fas fa-{{ home.our_vision_and_values_item_2_icon }} is-size-1 primary"></i>
                    <div>
                        <h4 class="title is-4 gradient primary">{{ home.our_vision_and_values_item_2_title }}</h4>
                        <p class="subtitle is-6">{{ home.our_vision_and_values_item_2_description }}</p>
                    </div>
                </div>
                <div class="column is-3 is-flex is-flex-direction-column" style="gap: 2rem;">
                    <i class="fas fa-{{ home.our_vision_and_values_item_3_icon }} is-size-1 primary"></i>
                    <div>
                        <h4 class="title is-4 gradient primary">{{ home.our_vision_and_values_item_3_title }}</h4>
                        <p class="subtitle is-6">{{ home.our_vision_and_values_item_3_description }}</p>
                    </div>
                </div>
                <div class="column is-3 is-flex is-flex-direction-column" style="gap: 2rem;">
                    <i class="fas fa-{{ home.our_vision_and_values_item_4_icon }} is-size-1 primary"></i>
                    <div>
                        <h4 class="title is-4 gradient primary">{{ home.our_vision_and_values_item_4_title }}</h4>
                        <p class="subtitle is-6">{{ home.our_vision_and_values_item_4_description }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="columns is-mobile mb-5 is-gapless">
    <div class="column is-4"><img src="https://sexpression.directus.app/assets/{{ home.photo_1 }}" alt=""></div>
    <div class="column is-4"><img src="https://sexpression.directus.app/assets/{{ home.photo_2 }}" alt=""></div>
    <div class="column is-4"><img src="https://sexpression.directus.app/assets/{{ home.photo_3 }}" alt=""></div>
</div>

<section class="section">
    <div class="container has-text-centered py-4">
        <h2 class="title">{{ home.statistics_title }}</h2>
        <p class="subtitle mb-6">{{ home.statistics_description }}</p>
        <div class="columns">
                <div class="column">
                    <p class="title is-size-1 primary">{{ home.statistics_item_1_percentage }}</p>
                    <p class="heading">{{ home.statistics_item_1_statement | upper }}</p>
                </div>
                <div class="column">
                    <p class="title is-size-1 primary">{{ home.statistics_item_2_percentage }}</p>
                    <p class="heading">{{ home.statistics_item_2_statement | upper }}</p>
                </div>
                <div class="column">
                    <p class="title is-size-1 primary">{{ home.statistics_item_3_percentage }}</p>
                    <p class="heading">{{ home.statistics_item_3_statement | upper }}</p>
                </div>
                <div class="column">
                    <p class="title is-size-1 primary">{{ home.statistics_item_4_percentage }}</p>
                    <p class="heading">{{ home.statistics_item_4_statement | upper }}</p>
                </div>
            </div>
        </div>
    </section>