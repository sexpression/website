---
layout: section.njk
title: Trustees
---

<h1>{{ title }}</h1>

<div class="columns is-multiline">
    {% for trustee in members.trusteeship %}
        <div class="column is-half">
            <div class="card">
                <div class="card-content">
                    <div class="media">
                        <div class="media-left">
                            <figure class="image is-48x48">
                                <img class="is-rounded" src="{{ trustee.fields["Picture"][0].url }}" alt="{{ trustee.fields["Profile description"] }}">
                            </figure>
                        </div>
                        <div class="media-content">
                            <p class="title is-4">{{ trustee.fields["Position"] }}</p>
                            <p class="subtitle is-6">{{ trustee.fields["Name"] }}</p>
                        </div>
                    </div>

                    <div class="content">
                        {{ trustee.fields["Biography"] }}
                    </div>
                    {% for email in trustee.fields["Email"] %}
                        <p class="subtitle is-6">{{ email }}</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endfor %}
</div>