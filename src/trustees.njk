---
layout: container.njk
title: Trustees
---

<h1 class="has-text-centered mb-6"><i class="fas mr-2 fa-users"></i>{{ title }}</h1>

<div class="columns is-multiline">
    {% for trustee in members.trusteeship %}
        <div class="column is-half is-two-thirds-tablet">
            <div class="card border-radius-2 p-5">
                <div class="card-content">
                    <div class="columns is-vcentered">
                        <div class="media-left is-vcentered">
                            <figure class="image is-128x128">
                                <img class="is-rounded" src="{{ trustee.fields['Picture'][0].url }}" alt="{{ trustee.fields["Profile description"] }}">
                            </figure>
                        </div>
                        <div class="media-content">
                        <div class="content">
                            <a onclick="modalToggle('{{ trustee.fields["Slug"] }}')"><p class="title is-4 is-size-5-mobile">{{ trustee.fields["Name"] }}</p></a>
                            <p class="subtitle is-6 is-size-7-mobile">{{ trustee.fields["Pronouns"] }}</p>
                            <p class="subtitle is-6 is-size-7-mobile">{{ trustee.fields["Position"] }}</p>
                        </div>
                            <div class="content">
                                <a class="" href="mailto:{{ trustee.fields["Email"] }}">
                                    <p class="subtitle is-6 is-size-7-mobile">{{ trustee.fields["Email"] }}</p>
                                </a>
                            </div>
                             {# <button data-target="modal" onclick="modalToggle('{{ trustee.fields["Slug"] }}')" aria-label="close">More</button> #}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="{{ trustee.fields["Slug"] }}" class="modal">
            <div class="modal-background"></div>
            <div class="modal-content">
                <div class="card">
  <div class="card-content">
    <div class="content">
      {{ trustee.fields["Biography"] }}
    </div>
  </div>
</div>
            </div>
            <button class="modal-close is-large" onclick="modalToggle('{{ trustee.fields["Slug"] }}')" aria-label="close"></button>
        </div>
    {% endfor %}
    {% include 'modalToggle.njk'%}
</div>