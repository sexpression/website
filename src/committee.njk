---
layout: container.njk
title: Committee
---

<h1 class="has-text-centered mb-6"><i class="fas mr-2 fa-users"></i>{{ title }}</h1>

<div class="columns is-multiline">
    {% for director in members.committee %}
        <div class="column is-half is-two-thirds-tablet">
            <div class="card border-radius-2 p-5">
                <div class="card-content">
                    <div class="columns is-vcentered">
                        <div class="media-left is-vcentered">
                            <figure class="image is-128x128">
                                <img class="is-rounded" src="{{ director.fields['Picture'][0].url }}" alt="{{ director.fields["Profile description"] }}">
                            </figure>
                        </div>
                        <div class="media-content">
                        <div class="content">
                            <a onclick="modalToggle('{{ director.fields["Slug"] }}')"><p class="title is-4 is-size-5-mobile">{{ director.fields["Name"] }}</p></a>
                            <p class="subtitle is-6 is-size-7-mobile">{{ director.fields["Pronouns"] }}</p>
                            <p class="subtitle is-6 is-size-7-mobile">{{ director.fields["Position"] }}</p>
                        </div>
                            <div class="content">
                                <a class="" href="mailto:{{ director.fields["Email"] }}">
                                    <p class="subtitle is-6 is-size-7-mobile">{{ director.fields["Email"] }}</p>
                                </a>
                            </div>
                             {# <button data-target="modal" onclick="modalToggle('{{ director.fields["Slug"] }}')" aria-label="close">More</button> #}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="{{ director.fields["Slug"] }}" class="modal">
            <div class="modal-background"></div>
            <div class="modal-content">
                <div class="card">
  <div class="card-content">
    <div class="content">
      {{ director.fields["Biography"] }}
    </div>
  </div>
</div>
            </div>
            <button class="modal-close is-large" onclick="modalToggle('{{ director.fields["Slug"] }}')" aria-label="close"></button>
        </div>
    {% endfor %}
    {% include 'modalToggle.njk'%}
</div>