---
layout: container.njk
title: Opportunities

---

<h1 class="has-text-centered">
    <i class="fas mr-2 fa-code-branch"></i>{{ title }}</h1>

<div class="tabs">
    <ul>
        <li {% if title == "Opportunities" %} class="is-active" {% endif %}>
            <a href="/opportunities">All Branches</a>
        </li>
        {# {% for opportunity in opportunities %}
            <li {% if title == country.name %} class="is-active" {% endif %}>
                <a href="/branches/{{ country.name | slug }}">{{ country.name }}</a>
            </li>
        {% endfor %} #}
    </ul>
</div>

<div class="columns is-multiline">
    {% for opportunity in opportunities.all %}
        <div class="column is-half is-two-thirds-tablet">
            <div class="card border-radius-2 p-5">
                <div class="card-content">
                    <div class="columns is-vcentered">
                        <div class="media-content">
                        <div class="content">
                            <p class="title is-4 is-size-5-mobile">{{ opportunity.fields["Name"] }}</p>
                            <p class="subtitle is-6 is-size-7-mobile">{{ opportunity.fields["Number of Positions"] }}</p>
                        </div>
                        <p class="subtitle is-6 is-size-7-mobile">{{ opportunity.fields["Ends"] }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>