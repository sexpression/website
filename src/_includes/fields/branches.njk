    <label class="label is-uppercase">Sexpression:UK Branch</label>
    <div class="control">
        <div class="select">
            <select name="branch" required="required">
                {% for branch in branches %}
                    <option value="{{ branch.email }},{{ branch.name }}">{{ branch.university.name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
</div>