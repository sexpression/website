---
layout: container.njk
title: Resources
---
<h1>{{ title }}</h1>

<div class="tabs">
    <ul>
        <li {% if title == "Resources" %} class="is-active" {% endif %}>
            <a href="/resources">All Resources</a>
        </li>
        {% for tag in resourcestag %}
            <li {% if title == tag.name %} class="is-active" {% endif %}>
                <a href="/resources/{{ tag.name | slug }}">{{ tag.name }}</a>
            </li>
        {% endfor %}
    </ul>
</div>

<div class="columns is-multiline">
    {% for resource in resources %}
            <div class="column is-one-quarter-tablet is-one-quarter-desktop is-one-quarter-widescreen is-one-quarter-fullhd">
                <div class="card">
                    <figure class="image is-2by3 m-0">
                        <img src="{{ resource.fields["File"][0]["thumbnails"]["large"]["url"] }}" alt="Placeholder image">
                    </figure>
                    <div class="card-content">
                        <div class="media">
                            <div class="media-content">
                                <p class="title is-size-6-mobile is-size-6-touch is-size-5-tablet is-4 pb-3">{{ resource.fields["Title"] }}</p>
                                <p class="subtitle is-size-6-mobile is-size-6-touch is-size-5-tablet is-4">{{ resource.fields["Tag"] }}</p>
                            </div>
                        </div>

                        <div class="content">
                            <p class="is-size-6-mobile is-size-6-touch is-size-5-tablet is-4">
                                <a href="{{ resource.fields["File"][0]["url"] }}">Download</a>
                            </p>
                            <p class="is-size-6-mobile is-size-6-touch is-size-5-tablet is-4 has-text-grey-light">
                                <time datetime="2016-1-1">{{ resource.fields["Last updated"] }}</time>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
    {% else %}
        Could not get resources.
    {% endfor %}
</div>