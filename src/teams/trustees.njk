---
layout: container.njk
title: Meet the team
---

<h1 class="has-text-centered mb-6">
    <i class="fas mr-2 fa-users"></i>{{ title }}</h1>

<div class="tabs">
    <ul>
        <li class="">
            <a href="/teams">National Committee</a>
        </li>
        <li class="is-active">
            <a href="/teams/trustees">Trustees</a>
        </li>
    </ul>
</div>

<div class="columns is-multiline">
    {% for member in members.trusteeship %}
        <div class="column is-half-tablet is-one-third-desktop is-one-quarter-widescreen is-one-quarter-fullhd">
            <div class="card border-radius-2 is-flex is-flex-direction-column py-6 is-align-items-center" style="gap: 2rem;">
                <figure class="image is-128x128 m-0">
                    <img class="is-rounded" src="{{ member.fields['Picture'][0].url }}" alt="{{ member.fields["Profile description"] }}">
                </figure>
                <div class="card-content p-0">
                    <p class="title is-size-6 pb-0 mb-1">{{ member.fields["Position"] }}</p>
                    <a onclick="modalToggle('{{ member.fields["Slug"] }}')" class="is-size-6 mb-0">{{ member.fields["Name"] }}</a>
                    <p class="is-size-7">{{ member.fields["Pronouns"] }}</p>
                    {% for email in member.fields.Email %}
                        <p class="mb-0">
                            <a class="color-black has-text-link is-size-7" href="mailto:{{ email }}">{{ email }}</a>
                        </p>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div id="{{ member.fields["Slug"] }}" class="modal">
            <div class="modal-background"></div>
            <div class="modal-content">
                <div class="card">
                    <div class="card-content">
                        <div class="content">
                            {{ member.fields["Biography"] }}
                        </div>
                    </div>
                </div>
            </div>
            <button class="modal-close is-large" onclick="modalToggle('{{ member.fields["Slug"] }}')"
        aria-label="close"></button>
        </div>
    {% endfor %}
    {% include 'modalToggle.njk'%}
</div>