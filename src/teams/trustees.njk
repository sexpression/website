---
layout: container.njk
title: Meet the team
---

<h1 class="has-text-centered mb-6">
    <i class="fas mr-2 fa-users"></i>{{ title }}</h1>

<div class="tabs">
    <ul>
        <li class="">
            <a href="/teams">National Committee</a>
        </li>
        <li class="is-active">
            <a href="/teams/trustees">Trustees</a>
        </li>
    </ul>
</div>

<div class="columns is-multiline">
    {% for member in trustees %}
        <div class="column is-half-tablet is-one-third-desktop is-one-quarter-widescreen is-one-quarter-fullhd">
            <div class="card border-radius-2 is-flex is-flex-direction-column py-6 is-align-items-center" style="gap: 2rem;">
                <figure class="image is-128x128 m-0">
                    <img class="is-rounded" src="https://zq5bmezp.directus.app/assets/{{ member.image }}" alt="{{ member.full_name }}">
                </figure>
                <div class="card-content p-0">
                    <a onclick="modalToggle('{{ member.full_name | slug }}')" class="is-size-6 mb-0">{{ member.full_name }}</a>
                    <p class="is-size-7">{{ member.gender_pronouns[0] }}</p>
                     <a class="color-black has-text-link is-size-7" href="mailto:{{  member.email }}">{{  member.email }}</a>
                </div>
            </div>
        </div>

        <div id="{{ member.full_name | slug }}" class="modal">
            <div class="modal-background"></div>
            <div class="modal-content">
                <div class="card">
                    <div class="card-content">
                        <div class="content">
                            {{ member.description }}
                        </div>
                    </div>
                </div>
            </div>
            <button class="modal-close is-large" onclick="modalToggle('{{ member.full_name | slug }}')"
        aria-label="close"></button>
        </div>
    {% endfor %}
    {% include 'modalToggle.njk'%}
</div>