---
layout: container.njk
title: Meet the team
---

<h1 class="has-text-centered mb-6">
    <i class="fas mr-2 fa-users"></i>{{ title }}</h1>

<div class="tabs">
    <ul>
        <li class="">
            <a href="/teams">All members</a>
        </li>
        <li class="is-active">
            <a href="/teams/national-committee">National Committee</a>
        </li>
        <li class="">
            <a href="/teams/trustees">Trustees</a>
        </li>
    </ul>
</div>

<div class="columns is-multiline">
    {% for member in members.committee %}
        <div class="column is-full-tablet is-full-desktop is-half-widescreen is-half-fullhd">
            <div class="card border-radius-2 p-5 is-flex is-align-items-center">
                <figure class="image is-128x128 mb-0">
                    <img class="is-rounded" src="{{ member.fields['Picture'][0].url }}" alt="{{ member.fields["Profile description"] }}">
                </figure>
                <div class="card-content p-0">
                    <p class="subtitle is-size-7 is-uppercase has-text-grey pb-4">{{ member.fields["Position"] }}</p>
                    <p class="title is-4 has-text-link">
                        <a onclick="modalToggle('{{ member.fields["Slug"] }}')">{{ member.fields["Name"]}}</a>
                    </p>
                    <p class="subtitle is-6">{{ member.fields["Pronouns"] }}</p>
                    {% for email in member.fields.Email %}
                        <p class="mb-0">
                            <a class="has-text-link" href="mailto:{{ email }}">{{ email }}</a>
                        </p>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div id="{{ member.fields["Slug"] }}" class="modal">
            <div class="modal-background"></div>
            <div class="modal-content">
                <div class="card">
                    <div class="card-content">
                        <div class="content">
                            {{ member.fields["Biography"] }}
                        </div>
                    </div>
                </div>
            </div>
            <button class="modal-close is-large" onclick="modalToggle('{{ member.fields["Slug"] }}')"
        aria-label="close"></button>
        </div>
    {% endfor %}
    {% include 'modalToggle.njk'%}
</div>