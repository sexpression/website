---
layout: container.njk
title: Branches
---

<h1 class="has-text-centered is-size-5">
    <i class="fas mr-2 fa-code-branch"></i>{{ title }}
</h1>

<div class="tabs">
    <ul>
        <li {% if title == "Branches" %} class="is-active" {% endif %}>
            <a href="/branches">All Branches</a>
        </li>
        {% for country in countries %}
            <li {% if title == country.name %} class="is-active" {% endif %}>
                <a href="/branches/{{ country.name | slug }}">{{ country.name }}</a>
            </li>
        {% endfor %}
    </ul>
</div>

<div class="columns is-multiline">
    {% for branch in branches.all %}
        <div class="column is-half-tablet is-half-desktop is-one-quarter-widescreen is-one-quarter-fullhd">
            <div class="card border-radius-2 p-5 is-flex is-flex-direction-column p-2" style="gap: 0.75rem;">
                <figure id="logo" class="image is-96x96 m-0">
                    {% include 'svgOne.njk' %}
                </figure>
                <div class="card-content p-0">
                    <p class="title is-size-6 pb-1">{{ branch.name }}</p>
                    <p class="subtitle is-size-7">{{ branch.university.name }},
                    {{ branch.university.country }}</p>
                    <p>
                        <a class="color-black has-text-link is-size-7" href="mailto:{{ branch.email }}">
                            {{ branch.email }}
                        </a>
                    </p>
                    <div>
                        {% if branch.instagram %}
                            <a class="color-black has-text-link" href="{{ branch.instagram }}">
                                <i class="fab mr-2 fa-instagram"></i>
                            </a>
                        {% endif %}
                        {% if branch.twitter %}
                            <a class="color-black has-text-link" href="{{ branch.twitter }}">
                                <i class="fab mr-2 fa-twitter"></i>
                            </a>
                        {% endif %}
                        {% if branch.facebook %}
                            <a class="color-black has-text-link" href="{{ branch.facebook }}">
                                <i class="fab mr-2 fa-facebook"></i>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>